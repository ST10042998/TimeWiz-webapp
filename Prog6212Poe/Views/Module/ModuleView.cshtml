@model Prog6212Poe.Models.ModuleViewModel
@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Module</title>
    <style>
        /* Add your styles here */
    </style>
</head>
<body style="font-family: Arial;">

    <div style="width: 790px; height: 450px; margin: -4px 0 0 0; position: relative;">

        <label style="color: DarkCyan; font-size: 25px; font-weight: bold; margin: 10px 0 0 0; text-align: right; width: 188px;">ADD DETAILS</label>

        <!-- Semester number-->
        <div style="margin: 30px 0 0 38px;">
            <label>Semester Number :</label>
            <input asp-for="Semester.SemesterNum" type=" text" name="txtSemester" style="margin:auto" display: block;" />
        </div>

        <!-- Number of weeks in semester-->
        <div style="margin: 25px 0 0 38px;">
            <!-- Adjusted margin to provide space between inputs -->
            <label>Number of weeks in semester :</label>
            <input asp-for="Semester.NumOfWeeks" type=" text" name="txtNumWeekSestr" style="margin:auto" display: block;" />
        </div>

        <!-- Start date for Semester-->
        <div style="margin: 25px 0 0 38px;">
            <!-- Adjusted margin to provide space between inputs -->
            <label>Start date of first week :</label>
            <input asp-for="Semester.StartDate" type=" date" name="txtStartDate" style="margin:auto" display: block;" />
        </div>

        <!-- button to save semester-->
        <button type="button" name="btnSaveSemester" style="margin: 30px 0 0 200px; width: 138px; background-color: #B5FF6F; display: block;">
            Add Semester
        </button>




        <!-- Module Name-->
        <div style="margin: 30px 0 0 38px;">
            <label>Module name :</label>
            <input asp-for="Module.Name"  style="margin:auto" />
        </div>

        <!-- Module Code-->
        <div style="margin: 25px 0 0 38px;">
            <label>Module Code :</label>
            <input asp-for="Module.Code"  style="margin:auto" />
        </div>

        <!-- Number of Credits -->
        <div style="margin: 25px 0 0 38px;">
            <label>Number of Credits :</label>
            <input asp-for="Module.Credits"  style="margin:auto" />
        </div>

        <!-- Class hours per week -->
        <div style="margin: 25px 0 0 38px;">
            <label>Class hours per week :</label>
            <input asp-for="Module.ClassHoursPerWeek"  style="margin:auto" />
        </div>

        <!-- Add module button-->
        <button type="button" name="btnSaveModule" style="margin: 30px 0 0 200px; width: 134px; background-color: #B5FF6F; box-shadow: 0 0 10px rgba(12, 255, 0, 0.35);">
            Add Module
        </button>


        <div>
            <!-- button to cancel-->
            <button type="button" name="btnCancelSave" style="margin: 50px 0 0 200px; width: 60px; background-color: #FF987A; box-shadow: 0 0 15px rgba(255, 0, 0, 0.45);">
                Cancel
            </button>
            <button type="button" name="btnDone" style="margin: 50px 0 0 50px; width: 50px; background-color: #B5FF6F; box-shadow: 0 0 15px rgba(12, 255, 0, 0.45);">
                Done
            </button>
        </div>


        <label style="margin: 415px 0 0 146px; width: 293px; height: 25px;"></label>

        <label style="margin: 272px 0 0 377px; color: Red; width: 325px; height: 26px;"></label>

        <label style="margin: 48px 0 0 353px; color: Red; width: 325px; height: 26px;"></label>


    </div>

</body>
</html>

